<!-- Chat header -->
<div class="chat-header">
    <div class="user-info">
        <img src="/placeholder.svg?height=40&width=40" alt="Вадим" class="user-avatar">
        <div class="user-details">
            <h2 class="user-name">Вадим</h2>
        </div>
    </div>
    <div class="chat-actions">
        <button class="more-button">
            <img src="/more.svg" alt="more_button" />
        </button>
    </div>
</div>

<!-- Chat messages -->
<div class="messages-container" id="messages_container" > 
    <div class="date-divider">19 июня</div>
</div>

<!-- Message input -->
<div class="message-input-container">
    <button class="attachment-button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M16.5 6V17.5C16.5 19.71 14.71 21.5 12.5 21.5C10.29 21.5 8.5 19.71 8.5 17.5V5C8.5 3.62 9.62 2.5 11 2.5C12.38 2.5 13.5 3.62 13.5 5V15.5C13.5 16.05 13.05 16.5 12.5 16.5C11.95 16.5 11.5 16.05 11.5 15.5V6H10V15.5C10 16.88 11.12 18 12.5 18C13.88 18 15 16.88 15 15.5V5C15 2.79 13.21 1 11 1C8.79 1 7 2.79 7 5V17.5C7 20.54 9.46 23 12.5 23C15.54 23 18 20.54 18 17.5V6H16.5Z"
                fill="#5181B8" />
        </svg>
    </button>
    <input type="text" placeholder="Сообщение" class="message-input">
    <button class="send-button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.01 21L23 12L2.01 3L2 10L17 12L2 14L2.01 21Z" fill="#5181B8" />
        </svg>
    </button>
</div>