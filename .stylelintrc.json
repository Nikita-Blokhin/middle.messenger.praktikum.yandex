{
    "extends": ["stylelint-config-standard"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "use",
                    "mixin",
                    "include"
                ]
            }
        ]
    },
    "ignoreFiles": [
        "*.ts",
        "**/*.ts",
        "*.hbs",
        "**/*.hbs",
        "*.html",
        "**/*.html"
    ]
}
